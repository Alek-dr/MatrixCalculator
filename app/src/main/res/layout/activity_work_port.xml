<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_work_port"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="4"
    tools:context=".WorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:id="@+id/current_matrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="Текущая матрица" />

        <EditText
            android:id="@+id/work_field"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:ellipsize="end"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:text=""
            android:textSize="15sp"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="#333333"
        android:gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_weight="5">

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/backspace"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border"
                    android:src="@android:drawable/ic_input_delete"
                    android:theme="?attr/buttonStyleSmall"/>

                <ImageButton
                    android:id="@+id/C"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border"
                    android:src="@drawable/c"
                    tools:textColor="@android:color/background_light" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/grid_matrix"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:isScrollContainer="false"
                    android:orientation="vertical" />
            </ScrollView>

            <ImageButton
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:layout_weight="5"
                android:background="@drawable/btn_border"
                android:src="@drawable/equal"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="12"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_weight="10"
                android:orientation="horizontal">

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/new_matrix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border"
                    android:onClick="onNewMatrixClick"
                    android:src="@android:drawable/ic_menu_add"
                    android:theme="?attr/buttonStyleSmall"/>

                <ImageButton
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:id="@+id/del_matrix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginVertical="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_border"
                    android:src="@android:drawable/ic_menu_delete"
                    android:theme="?attr/buttonStyle"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/operation_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="4">

                    <ImageButton
                        android:id="@+id/mult"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/oper_btn"
                        android:scaleType="centerInside"
                        android:src="@drawable/mult" />

                    <ImageButton
                        android:id="@+id/power"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/oper_btn"
                        android:scaleType="centerInside"
                        android:src="@drawable/pow" />

                    <ImageButton
                        android:id="@+id/step"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/oper_btn"
                        android:scaleType="centerInside"
                        android:src="@drawable/step" />

                    <ImageButton
                        android:id="@+id/brack"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@drawable/oper_btn"
                        android:scaleType="centerInside"
                        android:src="@drawable/brack" />
                </LinearLayout>

                <LinearLayout
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageButton
                        android:adjustViewBounds="true"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:scaleType="centerInside"
                        android:id="@+id/plus"
                        android:background="@drawable/oper_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/plus"/>

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/transpose"
                        android:background="@drawable/oper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/transp" />

                    <ImageButton
                        android:id="@+id/det"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/oper_btn"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/det" />

                    <ImageButton
                        android:adjustViewBounds="true"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:scaleType="centerInside"
                        android:id="@+id/show"
                        android:background="@drawable/oper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/show"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="4"
                    android:orientation="vertical">

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:id="@+id/sub"
                        android:background="@drawable/oper_btn"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/sub"/>

                    <ImageButton
                        android:adjustViewBounds="true"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:scaleType="centerInside"
                        android:id="@+id/invert"
                        android:background="@drawable/oper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/inv" />

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/jordan"
                        android:background="@drawable/oper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/gj"/>

                    <ImageButton
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:id="@+id/rang"
                        android:background="@drawable/oper_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/rg"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
