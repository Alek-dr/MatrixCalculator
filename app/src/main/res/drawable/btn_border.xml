<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke
                android:color="#FFFF"
                android:width="2dp" />
            <gradient
                android:startColor="#FF44485A"
                    android:endColor="#FF44485A"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:color="#FFFF"
                android:width="2dp" />
            <gradient
                android:startColor="#73778c"
                android:endColor="#73778c"/>
        </shape>
    </item>
</selector>